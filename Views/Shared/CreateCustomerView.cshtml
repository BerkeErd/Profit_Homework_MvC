@model Customer

<form id="createCustomerForm">
    
    <div class="form-group">
        <h1 style="text-align: center">Müşteri Ekle</h1>
        <label for="firstName">İsim:</label>
        <input type="text" class="form-control" asp-for="FirstName" required>
    </div
    ><div class="form-group">
        <label for="lastName">Soyisim:</label>
        <input type="text" class="form-control" asp-for="LastName" required>
    </div>
    <div class="form-group">
        <label for="phone">Telefon Numarası:</label>
        <input type="text" minlength="17" class="form-control" asp-for="PhoneNum" required />
    </div>
    <div class="form-group">
        <label for="Tc">TC Kimlik Numarası:</label>
        <input type="text" minlength="11" maxlength="11" class="form-control" asp-for="IdNumber" required>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Et</button>
</form>


