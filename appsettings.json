        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=B-BILGISAYAR\\SQLEXPRESS01;Database=ProfitHomeworkdb;Trusted_Connection=true;TrustServerCertificate=true;",
